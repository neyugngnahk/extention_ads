{
  "manifest_version": 3,
  "name": "FB Ad Saver (n8n)",
  "version": "1.0",
  "description": "Lưu quảng cáo và mở nhanh Ad Library.",
  "permissions": [],
  "host_permissions": [
    "*://*.facebook.com/ads/library/*",
    "https://n8n.aipencil.ai/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/ads/library/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}